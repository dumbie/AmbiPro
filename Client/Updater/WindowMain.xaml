<Window x:Class="Updater.WindowMain"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Updater"
        mc:Ignorable="d"
        Title="Application Updater"
        Height="125"
        Width="500"
        ResizeMode="CanMinimize"
        Background="{DynamicResource ApplicationWhiteBrush}"
        Topmost="True">

    <StackPanel Margin="10,5,10,5">
        <TextBlock Style="{StaticResource TextBlockBlackLight}" FontSize="{DynamicResource TextSizeHuge}" Text="Application Updater"/>
        <ProgressBar Name="progressbar_Status" Margin="0,5,0,0" Style="{StaticResource ProgressBarAccent}" HorizontalAlignment="Stretch" IsIndeterminate="True"/>
        <TextBlock Name="textblock_Status" Style="{StaticResource TextBlockGray}" Text="Checking for new application update."/>
    </StackPanel>
</Window>